@model Model.Model.ViewEventGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Group and Event</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>New Group and Event</legend>
        <div>
            <h3>New Group</h3>
            <div class="editor-label">
                 @Html.LabelFor(model => model.Group.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Group.Name)
                @Html.ValidationMessageFor(model => model.Group.Name)
            </div>

            <div class="editor-label">
                 @Html.LabelFor(model => model.Group.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Group.Description)
                @Html.ValidationMessageFor(model => model.Group.Description)
            </div>
        </div>
        <div>
            <h3>New Event</h3>
             <div class="editor-label">
                 @Html.LabelFor(model => model.Event.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Event.Name)
                @Html.ValidationMessageFor(model => model.Event.Name)
            </div>

            <div class="editor-label">
                 @Html.LabelFor(model => model.Event.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Event.Description)
                @Html.ValidationMessageFor(model => model.Event.Description)
            </div>

            <div class="editor-label">
                 @Html.LabelFor(model => model.Event.Lat)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Event.Lat)
                @Html.ValidationMessageFor(model => model.Event.Lat)
            </div>

            <div class="editor-label">
                 @Html.LabelFor(model => model.Event.Lon)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Event.Lon)
                @Html.ValidationMessageFor(model => model.Event.Lon)
            </div>

            <div class="editor-label">
                 @Html.LabelFor(model => model.Event.Radius)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Event.Radius)
                @Html.ValidationMessageFor(model => model.Event.Radius)
            </div>

        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Groups", "AdminPanel")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
